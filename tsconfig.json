{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "ES2020", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "types": ["@types/moment-duration-format", "@types/jest"]
  },
  "include": [".", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
